<div class="container profile">
  <div class="box">
    <!-- Main container -->
    <nav class="level">
      <!-- Left side -->
      <div class="level-left">
        <div class="level-item">
          <p class="subtitle is-5">
            <strong>タグで絞り込み</strong>
          </p>
        </div>
      </div>

      <!-- Right side -->
      <div class="level-right">
        <div class="tags">
          <% @tags.each do |tag| %>
            <%= link_to tag.name, tag_search_path(@site, tag), :class => "tag is-danger" %>
          <% end %>
        </div>
      </div>

    </nav>
  </div>
</div>

