<div class="container">

  <nav class="level">
    <div class="level-left">
      <div class="level-item">
        <h1 class="title">
          タグ管理
        </h1>
      </div>  
    </div>
    <div class="level-left">
      <div class="level-item">
        <%= link_to 'タグ登録', tags_path(@site), :class => "button is-warning" %>
      </div>  
    </div>
  </nav> 

  <div class="box">
    <!-- Main container -->
    <nav class="level">
      <!-- Left side -->
      <div class="level-left">
        <div class="level-item">
          <%= render 'form' %>
        </div>
      </div>

      <!-- Right side -->
      <div class="level-right">
        <div class="level-item">
          <div class="tags">
            <% @product.product_tags.each do |product_tag| %>
              <span class="tag is-danger">
                <%= product_tag.name %>
              </span>
              <%= link_to '', product_tag_path(@site, @product, product_tag), method: :delete, data: { confirm: '本当に削除しますか？' }, :class => "tag is-delete" %>
            <% end %>
          </div>
        </div>
      </div>

    </nav>
   
  </div>
  <%= link_to "サイトトップへ移動", site_path(@site), :class => "button is-info" %>
</div>
<br>