<%= form_with(model: @product_tag, local: true) do |form| %>
  <%= form.hidden_field :product_id, :value => @product.id %>
  
  <%= form.label :タグ名, :class => "label" %>
  <p class="control">
    <%= form.collection_select :tag_id, @site.tags.all, :id, :name, { prompt: "タグを選択" } ,{ :class => "select" } %>
  </p>
  <br>
  <p class="control">
    <%= form.submit "submit", data: { disable_with: "sending..."}, :class => "button is-primary" %>
  </p>
<% end %>
